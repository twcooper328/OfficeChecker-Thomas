@page
@model OfficeChecker.Pages.SitePages.EditListModel

@{
    ViewData["Title"] = "Index";
}

<h2>Edit Office</h2>
<form asp-page="/SitePages/EditList" method="get" class="text-nowrap searchh">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="SearchString" placeholder="Address" value="" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </p>
    </div>
</form>

<div class="container-fluid pinned-box">
    <div class="row table">
        @foreach (var item in Model.Offices) 
        {
            <div class="col-12 edit-itemm white-text">
                <div class="row mt-1">
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                
                       <b> @Html.DisplayFor(modelItem => item.OfficeName) </b> <br> 
                       <div class="suport-textt">
                        @Html.DisplayFor(modelItem => item.Address) <br> 
                        </div>
                        
                    </div>
                    
                        <div class="col-xs col-sm col-md col-lg mt-2 ">
                            <a class="t-btn-tagt btn-block" asp-area="" asp-page="/Offices/Edit" asp-route-id="@item.ID">Edit</a>
                        </div>
                        <div class="col mt-2">
                            <a class="t-btn-tagts btn-block" asp-area="" asp-page="/Offices/Delete" asp-route-id="@item.ID">Delete</a>
                        </div>
                        
                </div>
            </div>
        }
    </div>
</div>


